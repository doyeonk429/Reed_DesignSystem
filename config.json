{
  "source": ["Tokens/*.json"],
  "platforms": {
    "ios": {
      "transformGroup": "ios",
      "buildPath": "ios/Classes/Generated/",
      "prefix": "StyleDictionary",
      "files": [
        // 폰트 관련 Swift 파일 (UIFont 및 NSAttributedString 속성)
        {
          "destination": "StyleDictionaryTypography.swift",
          "format": "swift/typography", // <--- 사용자 정의 포맷터 이름
          "options": {
            "public": true,
            "accessLevel": "public",
            "import": ["UIKit", "CoreGraphics"], // 필요한 프레임워크 임포트
            "fileHeader": {
              "text": [
                "//",
                "// StyleDictionaryTypography.swift",
                "//",
                "",
                "// Do not edit directly",
                "// Generated by Style Dictionary."
              ]
            }
          },
          "filter": {
            "attributes": {
              "category": "typography" // 'typography' 카테고리만 필터링
            }
          }
        }
      ]
    }
    // "android" 및 "android-compose" 플랫폼은 여기에서 제거하거나 유지할 수 있습니다.
    // 현재 요청은 "ios-swift만 신경써달라" 이므로, 이 예시에서는 iOS만 남겨둡니다.
  }
}
